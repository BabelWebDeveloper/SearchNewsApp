<!--                            </form>-->
<!--                        </div>-->
<!--                    </div>-->
<!--                </div>-->
<!--            </lightning:layoutItem>-->

            <lightning:layoutItem flexibility="auto" padding="horizontal-medium">
                <div class="custom-box">
                    <lightning:button variant="brand" label="Search" title="Brand action" onclick="{!c.search}"/>
                </div>
            </lightning:layoutItem>

        </lightning:layout>
    </div>
</aura:component>